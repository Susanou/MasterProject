%
\newcommand{\uGreekDef}[2]{%
  \newcommand{#1}%
  {\ifuGreekUseLucida%
    \mbox{\uGreekLucida{{\relscale{\uGreekMag}\char#2}}}%
   \else%
    \ifuGreekUseMinionPro%
      \mbox{\uGreekMinionPro{{\relscale{\uGreekMag}\char#2}}}%
    \else
      \ifuGreekUseArev%
        \mbox{\uGreekArev{{\relscale{\uGreekMag}\char#2}}}%
    \else
      \ifuGreekUseHeuristica%
        \mbox{\uGreekHeuristica{{\relscale{\uGreekMag}\char#2}}}%
      \else
        \mbox{\uGreekEuler{{\relscale{\uGreekMag}\char#2}}}\fi\fi\fi\fi}}

\newcommand{\uGreekDefBold}[2]{%
  \newcommand{#1}%
  {\ifuGreekUseLucida\mbox{\uGreekLucida{{\relscale{\uGreekMag}\char#2}}}%
        \typeout{}%
        \typeout{*** Warning: Lucida upright greek boldface not available.}%
        \typeout{}%
      \else\mbox{\uGreekEulerBold{{\relscale{\uGreekMag}\char#2}}}\fi}}

